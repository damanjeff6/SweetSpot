<div class="container">
	<h2>Browsing in San Francisco<p class="lead">Showing <%=restaurants.length%> Sweet Spots!</p></h2>
	<div class="row">
		<% restaurants.each(function (restaurant) { %>
		  <div class="col-lg-4 col-sm-6 col-xs-12 lesspadding">
		      <a href="#restaurant/<%= restaurant.escape('id') %>">
						<div class="thumbnail">
							 <img src="http://placehold.it/800x600" class="img-responsive">
							 <div class="caption"><%= restaurant.escape("name") %></div>
						</div>
		      </a>
		  </div>
		<% }); %>
	</div>
</div>