<div class="container" id="new-location-page">
		<div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-7 col-md-offset-5">
            <div class="panel panel-default">
                <div class="panel-heading ">
                    List a New Location</div>
                <div class="panel-body">
                    <form class="form-horizontal" id="rest-form" role="form">
										<div class="form-group">
                        <label for="restaurant_name" class="col-sm-3 control-label">
                            Name</label>
                        <div class="col-sm-9">
                            <input type="txt" class="form-control" id="restaurant_name" name="restaurant[name]" placeholder="E.g Awesome Desset Shop" Required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_line1" class="col-sm-3 control-label">
                            Address 1</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[address_attributes][line1]" class="form-control" id="restaurant_line1" placeholder="E.g. 333 Grant Ave" Required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_line2" class="col-sm-3 control-label">
                            Address 2</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[address_attributes][line2]" class="form-control" id="restaurant_line2" placeholder="E.g. Apt 33" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_city" class="col-sm-3 control-label">
                            City</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[address_attributes][city]" class="form-control" id="restaurant_city" placeholder="E.g. San Francisco" Required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_state" class="col-sm-3 control-label">
                            State</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[address_attributes][state]" class="form-control" id="restaurant_state" placeholder="E.g. CA" Required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_zip" class="col-sm-3 control-label">
                            Zip</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[address_attributes][zip]" class="form-control" id="restaurant_zip" placeholder="E.g. 94108" Required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_phone" class="col-sm-3 control-label">
                            Phone</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[phone]" class="form-control" id="restaurant_phone" placeholder="E.g. (555)677-9108" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="restaurant_url" class="col-sm-3 control-label">
                            URL</label>
                        <div class="col-sm-9">
                            <input type="text" name="restaurant[url]" class="form-control" id="restaurant_url" placeholder="E.g. www.yelp.com" >
                        </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">Categories</label>
											<div class="col-sm-9">
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox1" name="restaurant[category_attributes][cake]" value="true">Cake/Pie
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox2" name="restaurant[category_attributes][cookies]" value="true">Cookies
													</label>			
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox3" name="restaurant[category_attributes][crepes]" value="true">Crepes
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox4" name="restaurant[category_attributes][cupcakes]" value="true">Cupcakes
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox5" name="restaurant[category_attributes][yogurt]" value="true">Frozen Yogurt
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox6" name="restaurant[category_attributes][fruit]" value="true">Fruit
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox7" name="restaurant[category_attributes][icecream]" value="true">Ice Cream
													</label>
													<label class="checkbox-inline">
													  <input type="checkbox" id="checkbox8" name="restaurant[category_attributes][tea]" value="true">Tea/Coffee
													</label>
										  </div>
                    </div>
                    <input type="hidden" name="restaurant[address_attributes][lat]" id='lat' value="0.0">
										<input type="hidden" name="restaurant[address_attributes][lng]" id='lng' value="0.0">
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
														<button id="submit-new" class="btn btn-warning btn-sm">Submit!</button>
                                 <button type="reset" class="btn btn-default btn-sm">
                                Reset</button>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>