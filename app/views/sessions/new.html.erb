<%= render :partial => "layouts/header" %>

<body id="signup-container">
<div class="container">
		<div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-4 col-md-offset-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span> Login</div>
                <div class="panel-body">
                    <form action="<%= session_url %>" method="post" class="form-horizontal" role="form">
										  <input
										     name="authenticity_token"
										     type="hidden"
										     value="<%= form_authenticity_token %>">
										<div class="form-group">
                        <label for="user_username" class="col-sm-3 control-label">
                            Username</label>
                        <div class="col-sm-9">
                            <input type="txt" class="form-control" id="user_username" name="user[username]" placeholder="Username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="user_password" class="col-sm-3 control-label">
                            Password</label>
                        <div class="col-sm-9">
                            <input type="password" name="user[password]" class="form-control" id="user_password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-2 col-sm-7 text-right">
                            <button type="submit" class="btn btn-success btn-sm">Sign in</button>
                            <button type="reset" class="btn btn-default btn-sm">Reset</button>
												</div>
										</form>
													<form action="<%= session_url %>" method="post" class="form-horizontal">
														<button type="submit" class="btn btn-primary btn-sm">GUEST</button>
														<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
														<input type="hidden" name="user[username]" value="guest">
														<input type="hidden" name="user[password]" value="password">
													</form>
                    </div>
                </div>
                <div class="panel-footer">
                    Not Signed Up? <a href="/users/new">Register here</a></div>
            </div>
        </div>
    </div>
</div>
</body>